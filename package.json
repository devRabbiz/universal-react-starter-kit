{
  "name": "universal-react-starter-kit",
  "version": "0.2.0",
  "description": "An universal web application framework using react, redux, koa and webpack",
  "keywords": [
    "react",
    "redux",
    "koa",
    "universal",
    "isomorphic",
    "react-router"
  ],
  "license": "MIT",
  "main": "bin/server.js",
  "scripts": {
    "build": "better-npm-run build",
    "postinstall": "npm run build",
    "postrelease": "better-npm-run postrelease",
    "eslint": "eslint webpack src",
    "serve": "concurrently --kill-others \"npm run watch-client\" \"npm run start-dev\" \"npm run start-dev-api\"",
    "serve:dist": "npm run build && npm start",
    "start": "concurrently --kill-others \"npm run start-prod\" \"npm run start-prod-api\"",
    "start-dev": "better-npm-run start-dev",
    "start-dev-api": "better-npm-run start-dev-api",
    "start-prod": "better-npm-run start-prod",
    "start-prod-api": "better-npm-run start-prod-api",
    "watch-client": "better-npm-run watch-client",
    "release": "standard-version"
  },
  "dependencies": {
    "axios": "^0.15.3",
    "babel-cli": "^6.22.2",
    "babel-core": "^6.22.1",
    "babel-loader": "^6.2.10",
    "babel-plugin-add-module-exports": "^0.2.1",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-plugin-transform-react-display-name": "^6.22.0",
    "babel-plugin-transform-runtime": "^6.22.0",
    "babel-polyfill": "^6.22.0",
    "babel-preset-es2015": "^6.22.0",
    "babel-preset-react": "^6.22.0",
    "babel-preset-stage-0": "^6.22.0",
    "babel-register": "^6.22.0",
    "babel-runtime": "^6.22.0",
    "body-parser": "^1.15.2",
    "classnames": "^2.2.5",
    "compression": "^1.6.0",
    "file-loader": "^0.10.0",
    "image-webpack-loader": "^3.2.0",
    "immutable": "^3.8.1",
    "koa": "next",
    "koa-body": "2",
    "koa-convert": "^1.2.0",
    "koa-cookie": "^1.0.0",
    "koa-favicon": "next",
    "koa-json": "next",
    "koa-proxy": "^0.8.0",
    "koa-session": "^3.4.0",
    "koa-static": "next",
    "less": "^2.5.3",
    "less-loader": "^2.2.1",
    "lru-memoize": "^1.0.0",
    "multireducer": "^3.0.3",
    "offline-plugin": "^4.6.0",
    "opn": "^4.0.2",
    "piping": "^1.0.0-rc.4",
    "postcss-loader": "^1.2.2",
    "pretty-error": "^2.0.2",
    "react": "^15.4.2",
    "react-dom": "^15.4.2",
    "react-helmet": "^4.0.0",
    "react-redux": "^5.0.2",
    "react-router": "^3.0.2",
    "react-router-redux": "^4.0.0",
    "react-router-scroll": "^0.4.1",
    "redux": "^3.6.0",
    "redux-async-connect": "^1.0.0-rc4",
    "redux-form": "^6.5.0",
    "redux-thunk": "^2.1.0",
    "serialize-javascript": "^1.3.0",
    "standard-version": "^4.0.0",
    "superagent": "^3.4.1",
    "url-loader": "^0.5.7",
    "webpack-isomorphic-tools": "^2.6.6"
  },
  "devDependencies": {
    "autoprefixer": "^6.7.2",
    "babel-eslint": "^7.1.1",
    "babel-plugin-react-transform": "^2.0.2",
    "babel-plugin-typecheck": "^3.9.0",
    "better-npm-run": "^0.0.14",
    "clean-webpack-plugin": "^0.1.6",
    "concurrently": "^3.1.0",
    "css-loader": "^0.26.1",
    "eslint": "^3.14.1",
    "eslint-config-airbnb": "^14.1.0",
    "eslint-loader": "^1.0.0",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jsx-a11y": "^4.0.0",
    "eslint-plugin-react": "^6.9.0",
    "extract-text-webpack-plugin": "^2.0.0-rc.3",
    "react-a11y": "^0.3.3",
    "react-transform-catch-errors": "^1.0.0",
    "react-transform-hmr": "^1.0.1",
    "redbox-react": "^1.1.1",
    "redux-devtools": "^3.3.2",
    "redux-devtools-dock-monitor": "^1.1.1",
    "redux-devtools-log-monitor": "^1.2.0",
    "style-loader": "^0.13.0",
    "webpack": "^2.2.1",
    "webpack-dev-middleware": "^1.10.0",
    "webpack-hot-middleware": "^2.16.1"
  },
  "engines": {
    "node": ">4.0"
  },
  "betterScripts": {
    "start-prod": {
      "command": "node ./bin/server.js",
      "env": {
        "NODE_PATH": "./src",
        "NODE_ENV": "production",
        "PORT": 8080,
        "APIPORT": 3030
      }
    },
    "start-prod-api": {
      "command": "babel-node ./bin/api.js",
      "env": {
        "NODE_PATH": "./api",
        "NODE_ENV": "production",
        "APIPORT": 3030
      }
    },
    "start-dev": {
      "command": "babel-node ./bin/server.js",
      "env": {
        "NODE_PATH": "./src",
        "NODE_ENV": "development",
        "PORT": 3000,
        "APIPORT": 3030
      }
    },
    "start-dev-api": {
      "command": "babel-node ./bin/api.js",
      "env": {
        "NODE_PATH": "./api",
        "NODE_ENV": "development",
        "APIPORT": 3030
      }
    },
    "watch-client": {
      "command": "babel-node webpack/webpack-dev-server.js",
      "env": {
        "NODE_PATH": "./src",
        "PORT": 3000,
        "APIPORT": 3030
      }
    },
    "build": {
      "command": "webpack --verbose --colors --display-error-details --config webpack/prod.config.babel.js",
      "env": {
        "NODE_ENV": "production"
      }
    },
    "postrelease": {
      "command": "git push && git push origin --tags"
    }
  }
}
