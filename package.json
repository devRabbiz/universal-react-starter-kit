{
  "name": "universal-react-starter-kit",
  "version": "0.6.0",
  "description": "An universal web application framework using react, redux, koa and webpack",
  "keywords": [
    "universal",
    "react",
    "redux",
    "koa",
    "isomorphic",
    "react-router",
    "webpack",
    "eslint",
    "stylelint",
    "postcss",
    "pwa"
  ],
  "license": "MIT",
  "main": "bin/server.js",
  "scripts": {
    "build": "better-npm-run build",
    "postrelease": "better-npm-run postrelease",
    "postinstall": "babel-node ./scripts/postinstall.js",
    "lint": "eslint webpack src",
    "lint:style": "stylelint src/**/*.less",
    "serve": "concurrently --kill-others -p \"[{name}]\" -n \"ASSET,HTTP,API\" -c \"blue,magenta,yellow\" \"bnr asset\" \"bnr http\" \"bnr api\"",
    "serve:dist": "npm run build && npm start",
    "start": "concurrently --kill-others -p \"[{name}]\" -n \"HTTP,API\" -c \"blue,magenta\" \"bnr http\" \"bnr api\"",
    "release": "standard-version",
    "test": "npm run lint && npm run lint:style",
    "dll": "better-npm-run dll"
  },
  "dependencies": {
    "autoprefixer": "^6.7.6",
    "babel-cli": "^6.23.0",
    "babel-core": "^6.23.1",
    "babel-loader": "^6.3.2",
    "babel-plugin-add-module-exports": "^0.2.1",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-plugin-transform-react-display-name": "^6.23.0",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-es2015": "^6.22.0",
    "babel-preset-react": "^6.23.0",
    "babel-preset-stage-0": "^6.22.0",
    "babel-register": "^6.23.0",
    "babel-runtime": "^6.23.0",
    "better-npm-run": "^0.0.14",
    "classnames": "^2.2.5",
    "clean-webpack-plugin": "^0.1.15",
    "copy-webpack-plugin": "^4.0.1",
    "css-loader": "^0.26.2",
    "extract-text-webpack-plugin": "^2.0.0",
    "file-loader": "^0.10.1",
    "file-stream-rotator": "^0.0.7",
    "less": "^3.0.0-alpha.2",
    "less-loader": "^2.2.3",
    "offline-plugin": "^4.6.1",
    "postcss-loader": "^1.3.3",
    "pretty-error": "^2.0.2",
    "react": "^15.4.2",
    "react-a11y": "^0.3.3",
    "react-dom": "^15.4.2",
    "react-helmet": "^4.0.0",
    "react-redux": "^5.0.2",
    "react-router": "^3.0.2",
    "react-router-redux": "^4.0.8",
    "react-router-scroll": "^0.4.1",
    "redux": "^3.6.0",
    "redux-async-connect": "^1.0.0-rc4",
    "redux-form": "^6.5.0",
    "redux-thunk": "^2.2.0",
    "serialize-javascript": "^1.3.0",
    "style-loader": "^0.13.1",
    "superagent": "^3.5.0",
    "url-loader": "^0.5.8",
    "webpack": "^2.2.1",
    "webpack-isomorphic-tools": "^3.0.0"
  },
  "devDependencies": {
    "babel-eslint": "^7.1.1",
    "babel-plugin-react-transform": "^2.0.2",
    "babel-plugin-typecheck": "^3.9.0",
    "concurrently": "^3.3.0",
    "eslint": "^3.16.1",
    "eslint-config-airbnb": "^14.1.0",
    "eslint-loader": "^1.6.3",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jsx-a11y": "^4.0.0",
    "eslint-plugin-react": "^6.10.0",
    "image-webpack-loader": "^3.2.0",
    "koa": "^2.0.1",
    "koa-body": "^2.0.0",
    "koa-convert": "^1.2.0",
    "koa-cookie": "^1.0.0",
    "koa-json": "^2.0.2",
    "koa-morgan": "^1.0.1",
    "koa-proxy": "^0.8.0",
    "koa-session": "^4.0.1",
    "koa-static": "^3.0.0",
    "mkdirp": "^0.5.1",
    "opn": "^4.0.2",
    "piping": "^1.0.0-rc.4",
    "react-transform-catch-errors": "^1.0.2",
    "react-transform-hmr": "^1.0.4",
    "redbox-react": "^1.3.4",
    "redux-devtools": "^3.3.2",
    "redux-devtools-dock-monitor": "^1.1.1",
    "redux-devtools-log-monitor": "^1.2.0",
    "standard-version": "^4.0.0",
    "stylelint": "^7.9.0",
    "stylelint-config-standard": "^16.0.0",
    "stylelint-webpack-plugin": "^0.7.0",
    "webpack-dev-middleware": "^1.10.1",
    "webpack-hot-middleware": "^2.17.1"
  },
  "engines": {
    "node": ">4.0",
    "npm": ">3.0"
  },
  "betterScripts": {
    "http": {
      "command": "babel-node ./bin/server.js"
    },
    "api": {
      "command": "babel-node ./bin/api.js",
      "env": {
        "NODE_PATH": "./api"
      }
    },
    "asset": {
      "command": "babel-node webpack/webpack-dev-server.js"
    },
    "build": {
      "command": "webpack --display-error-details --config webpack/prod.config.babel.js",
      "env": {
        "NODE_ENV": "production"
      }
    },
    "dll": {
      "command": "webpack --colors --display-error-details --config webpack/dll.config.babel.js",
      "env": {
        "NODE_ENV": "local"
      }
    },
    "postrelease": {
      "command": "git push && git push origin --tags"
    }
  }
}
